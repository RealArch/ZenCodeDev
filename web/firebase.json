{
  "hosting": {
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "source": ".",
    "frameworksBackend": {
      "region": "us-central1"
    },
    "rewrites": [
      {
        "source": "/:path((?!es|en).*)",
        "destination": "/es/:path"
      },
      {
        "source": "/es/**",
        "function": "ssr"
      },
      {
        "source": "/en/**",
        "function": "ssr"
      },
      {
        "source": "/",
        "destination": "/es/index.html"
      },
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  },
  "emulators": {
    "apphosting": {
      "port": 5002,
      "rootDirectory": "./",
      "startCommand": "npm run dev"
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}