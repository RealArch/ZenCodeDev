{
  "hosting": {
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "source": ".",
    "frameworksBackend": {
      "region": "us-central1"
    },
    "rewrites": [
      { "source": "/es/**", "function": "ssr" },
      { "source": "/en/**", "function": "ssr" },
      { "source": "/", "destination": "/es/index.html" },
      { "source": "**", "function": "ssr" }
    ]
  }
}